@using PagedList;
@using PagedList.Mvc;
@model IPagedList<WebSite.Models.Services>

@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron jumbotron-Services">
    <h1>Послуги</h1>
    <p> Організація весіль, ремонт авто, побутової техніки, транспортні послуги...<br/> Потрібен електик чи сантехнік, маляр чи штукатур, повар чи прибиральниця - всі види послуг ви знайдете тут! </p>
    <p><a class="btn btn-default btn-lg" @Html.ActionLink("Додати оголошення / Create new", "Create")</a></p>
</div>



<table class="table">
    <tr>
        <th>
           @Html.DisplayNameFor(model => model.First().Description)
        </th>
        <th>
             @Html.DisplayNameFor(model => model.First().phone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderByDescending(i => i.ID))
{
    <tr>
        <td>
            <pre>@Html.DisplayFor(modelItem => item.Description)</pre> 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink(" |Edit| ", "Edit", new { id = item.ID }) 
                @Html.ActionLink(" |Details| ", "Details", new { id = item.ID }) 
                @Html.ActionLink(" |Delete| ", "Delete", new { id = item.ID })  
            }
            else
            {

                @Html.ActionLink("Details", "Details", new { id = item.ID })

            }


    </tr>
}

</table>
<div>@Html.PagedListPager(Model,page=>Url.Action("Index",new { page}))</div>
