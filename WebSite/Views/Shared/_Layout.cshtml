<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="hidden-md hidden-lg"><img src="~/images/logo.jpg" /></div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>             
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><div class="hidden-xs hidden-sm"><img src="~/images/logo.jpg" /></div></li>
                    <li>@Html.ActionLink("Home Page", "Index", "Home")</li>
                    <li>@Html.ActionLink("Jobs / Робота", "Index", "AdTables")</li>
                    <li>@Html.ActionLink("Services / Послуги", "Contact", "Home")</li>
                    <li>@Html.ActionLink("For Sale / Продам", "Contact", "Home")</li>
                    <li>@Html.ActionLink("For rent / Оренда житла", "Index", "ForRents")</li>
                    <li>@Html.ActionLink("Contact US /Контакти ", "Contact", "Home")</li>
                   
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li> @Html.ActionLink("LogOut", "Logout", "User")</li>
                    }
                   
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Created by Rostyslav Zhovnir</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
